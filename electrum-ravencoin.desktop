[Desktop Entry]
Comment=Lightweight Ravencoin Client
Exec=sh -c "PATH=\"\\$HOME/.local/bin:\\$PATH\"; electrum %u"
GenericName[en_US]=Ravencoin Wallet
GenericName=Ravencoin Wallet
Icon=electrum-ravencoin
Name[en_US]=Ravencoin Bitcoin Wallet
Name=Ravencoin Bitcoin Wallet
Categories=Finance;Network;
StartupNotify=true
StartupWMClass=electrum
Terminal=false
Type=Application
MimeType=x-scheme-handler/ravencoin;
Actions=Testnet;

[Desktop Action Testnet]
Exec=sh -c "PATH=\"\\$HOME/.local/bin:\\$PATH\"; electrum --testnet %u"
Name=Testnet mode
